{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "curriculo-inteligente/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "curriculo-inteligente/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "curriculo-inteligente/dist/index.html"
    }
  ],
  "installCommand": "npm install && cd backend && npm install && cd ../curriculo-inteligente && npm install",
  "buildCommand": "cd backend && npm run vercel-build && cd ../curriculo-inteligente && npm run vercel-build"
}